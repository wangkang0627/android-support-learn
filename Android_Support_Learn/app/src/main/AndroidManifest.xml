<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="learn.com.android_support_learn">

    <application
        android:name=".PApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.layout.LinearLayoutCompatActivity"></activity>
        <activity android:name=".activity.widget.DialogCompatActivity"></activity>
        <activity android:name=".activity.widget.AppCompatSpinnerActivity"></activity>
        <activity android:name=".activity.widget.AppCompatButtonActivity"></activity>
        <activity android:name=".activity.widget.RecyclerViewGridActivity"></activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
